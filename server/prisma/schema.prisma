generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  score     Int      @default(0)
  points    Int      @default(0)
  progress  UserQuizProgress[]
  badges    UserBadge[]  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sentFriendships     Friendship[] @relation("SentFriendships")
  receivedFriendships Friendship[] @relation("ReceivedFriendships")

  @@map("users")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String @unique
  quizzes Quiz[]
  
  @@map("categories")
}

model Quiz {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  questions   Json
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  progress    UserQuizProgress[]
  difficulty  String    @default("medium") 
  createdAt   DateTime  @default(now())

  @@map("quizzes")
}

model UserQuizProgress {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  score     Int
  total     Int
  attempts  Int      @default(1)
  completed Boolean  @default(false)
  answers   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, quizId])
  @@map("user_quiz_progress")
}

model Badge {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String   // эмодзи
  color       String   // цвет для отображения
  rarity      String   // common, rare, epic, legendary
  type        String   // progressive, category, mastery
  condition   Json     // условия получения
  createdAt   DateTime @default(now())
  
  userBadges UserBadge[]
  
  @@map("badges")
}

model UserBadge {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  badgeId   Int
  badge     Badge    @relation(fields: [badgeId], references: [id])
  earnedAt  DateTime @default(now())
  
  @@unique([userId, badgeId])
  @@map("user_badges")
}

enum FriendshipStatus {
  PENDING
  ACCEPTED  
  DECLINED
}

model Friendship {
  id        Int      @id @default(autoincrement())
  senderId  Int
  sender    User     @relation("SentFriendships", fields: [senderId], references: [id])
  receiverId Int
  receiver  User     @relation("ReceivedFriendships", fields: [receiverId], references: [id])
  status    FriendshipStatus @default(PENDING)
  createdAt DateTime @default(now())
  
  @@unique([senderId, receiverId])
}

