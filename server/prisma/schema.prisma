generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  score     Int      @default(0)
  points    Int      @default(0)
  progress  UserQuizProgress[]
  badges    UserBadge[]  // ← ДОБАВЛЯЕМ СВЯЗЬ
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String @unique
  quizzes Quiz[]
  
  @@map("categories")
}

model Quiz {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  questions   Json
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  progress    UserQuizProgress[]
  createdAt   DateTime  @default(now())

  @@map("quizzes")
}
model UserQuizProgress {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  score     Int      // Количество правильных ответов
  total     Int      // Общее количество вопросов
  attempts  Int      @default(1) // ← ДОБАВЛЯЕМ СЧЕТЧИК ПОПЫТОК
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, quizId])
  @@map("user_quiz_progress")
}

model Badge {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String   // эмодзи
  color       String   // цвет для отображения
  rarity      String   // common, rare, epic, legendary
  type        String   // progressive, category, mastery
  condition   Json     // условия получения
  createdAt   DateTime @default(now())
  
  userBadges UserBadge[]
  
  @@map("badges")
}

model UserBadge {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  badgeId   Int
  badge     Badge    @relation(fields: [badgeId], references: [id])
  earnedAt  DateTime @default(now())
  
  @@unique([userId, badgeId])
  @@map("user_badges")
}